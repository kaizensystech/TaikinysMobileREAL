<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kaizenmax.taikinys_icl.view.DemoL3Activity_Protocol"
    tools:showIn="@layout/app_bar_demo_l3_activity__protocol">









    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">



        <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:id="@+id/parent_linear_layout"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="5dp"
            tools:context="com.kaizenmax.taikinysicl2.view.DemoL3Activity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <!-- android:background="@color/lightblue" -->

                <com.baoyachi.stepview.HorizontalStepView

                    android:id="@+id/step_view"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"



                    android:layout_centerInParent="true"

                    />
            </LinearLayout>








    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="25dp"
        android:orientation="horizontal" >


        <ImageView
            android:id="@+id/previous"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:layout_weight="1"
            android:onClick="previous"
            android:src="@drawable/previous" />

        <!-- android:onClick="next" -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="@string/demol3formtitle2"
            android:textColor="@color/lightblue"
            android:layout_gravity="center"
            android:gravity="center"

            android:textSize="18dp"


            />

        <ImageView
            android:id="@+id/next"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:onClick="next"
            android:layout_weight="1"
            android:src="@drawable/next" />



    </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvprevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="start"
        android:layout_weight="1"
        android:text="Previous"
        android:onClick="previous"
        android:textSize="12sp"
       />

    <!-- android:onClick="next" -->




    <TextView
        android:id="@+id/tvnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="end"
        android:layout_weight="1"
        android:text="Next"
        android:layout_marginRight="12dp"
        android:onClick="next"
        android:textSize="12sp" />







</LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/dateOfProtocol"
                    android:layout_height="wrap_content"
                    android:inputType="date"


                    android:hint="Date of Protocol*" />
            </android.support.design.widget.TextInputLayout>


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cropCategory"
                android:spinnerMode="dropdown"
                >
            </Spinner>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cropFocus"
                android:layout_marginTop="-10dp"
                android:spinnerMode="dropdown">
            </Spinner>


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/meetingpurpose"
                android:layout_marginTop="-10dp"
                android:spinnerMode="dropdown">
            </Spinner>

            <com.kaizenmax.taikinys_icl.util.MultiSelectionSpinner
                android:id="@+id/productFocus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                />



            <Button
                android:layout_width="match_parent"
                android:background="#228B22"
                android:id="@+id/saveBtn"
                android:text="Save"
                android:textColor="#fff"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content" />





        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>
</android.support.v7.widget.LinearLayoutCompat>